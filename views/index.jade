  script(type='text/javascript', src='lib/jquery.ui.mouse.js')
  script(type='text/javascript', src='lib/jquery.ui.draggable.js')
  script(type='text/javascript', src='lib/jquery.ui.droppable.js')
  script(type='text/javascript', src='lib/jquery.overlaps.js')
  script(type='text/javascript', src='lib/jquery-collision.min.js')
  script(type='text/javascript', src='lib/jquery-ui-draggable-collision.min.js')
  script(type='text/javascript', src='http://maps.google.com/maps/api/js')
  script(type='text/javascript', src='/socket.io/socket.io.js')
  script(type='text/javascript', src='javascripts/google.js')
  script(type='text/javascript', src='javascripts/inventory.js')
  script(type='text/javascript', src='javascripts/ui.js')
  script(type='text/javascript', src='javascripts/index.js')